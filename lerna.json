{
  "packages": [
    "packages/*",
    "designable/*",
    "devtools/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "npmClientArgs": [
    "--ignore-engines"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    },
    "version": {
      "forcePublish": [
        "@formily/*"
      ],
      "exact": true,
      "noGitTagVersion": true,
      "message": "chore(versions): publish packages %s"
    }
  }
}